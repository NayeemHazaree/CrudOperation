@model IEnumerable<CRUD.Models.Models.Category>

<div class="border p-3">
    <div class="row">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert">Add New Category</a>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.Name</td>
                        @if(@cat.Status == true){
                            <td>
                                <input type="checkbox" checked disabled>
                            </td>
                        }
                        else{
                            <td>
                                <input type="checkbox" disabled>
                            </td>
                        }
                        <td>
                            <div class="row">
                                <div class="col-6">
                                    <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@cat.Id">Edit</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category added yet!</p>
    }
</div>
