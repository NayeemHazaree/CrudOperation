@model CRUD.Models.Models.Product

<form method="post">

    <div class="border p-3">
        <div class="row form-group">
            <h2 class="text-info">Delete Product</h2>
        </div>
        <br />
        <div class="row">
            <input asp-for="Id" hidden />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea disabled asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select disabled asp-for="CategoryId" asp-items="@Model.CategoryList" class="form-control">
                            <option selected disabled>--Select Category--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="BrandId"></label>
                    </div>
                    <div class="col-8">
                        <select disabled asp-for="BrandId" asp-items="@Model.BrandList" class="form-control">
                            <option selected disabled>--Select Brand--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Quantity" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-info w-100" value="Delete" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>